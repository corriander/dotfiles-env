# DEPRECATED. Functionality now implemented within .bash_prompt
source ~/.functions/in_git_repo
source ~/.functions/in_git_annex

git_type () {
	# Return a string describing the type of git repository

	# Hacky patch to prevent this causing a problem with /etckeeper
	if [ "${PWD}" = "/etc" ]
	then
		return 1
	fi

	# ...aaand continue
	if in_git_annex
	then
		echo 'git-annex' && return 0
	elif [ ! -z $VCSH_DIRECTORY ]
	then
		echo "vcsh|$VCSH_DIRECTORY" && return 0
	elif in_git_repo
	then
		echo 'git' && return 0
	else
		return 1
	fi
}
	
