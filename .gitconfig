[include]
    path = ~/.private/gitidentity
[core]
    autocrlf = input
    safecrlf = true
    excludesfile = ~/.gitignore
[alias]
    go = checkout
    co = checkout
    ci = commit
    st = status
    br = branch
    cp = cherry-pick -x
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    uncommit = reset --soft HEAD^1
    unstage = reset --mixed HEAD
    rewind-commit = reset --soft HEAD^1
    rewind-index = reset --mixed HEAD^1
    rewind-files = reset --hard HEAD^1
	wdiff = diff --color-words
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[filter "tabspace"]
#   smudge = expand --tabs=4 --first-only
#   clean = unexpand --tabs=4 --initial
[push]
	default = simple
